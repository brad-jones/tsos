{
    "name": "@brad-jones/tsos-compiler",
    "version": "2.0.0",
    "description": "An extendable typescript compiler, based on ts-simple-ast.",
    "author": "Brad Jones <brad@bjc.id.au>",
    "license": "MIT",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "clean": "shx rm -rf ./dist; shx rm -rf ./.nyc_output",
        "build": "tsc -p tsconfig.build.json",
        "test": "../tsos-cli/dist/index.js runner ./tests/runner.ts --no-visitors",
        "cover": "nyc --exclude \"tests/**\" --report-dir ../../test-results/tsos-compiler/coverage --reporter=html --reporter=clover yarn test"
    },
    "dependencies": {
        "deasync-promise": "^1.0.1",
        "inversify": "^4.3.0",
        "lodash": "^4.17.4",
        "mz": "^2.7.0",
        "require-glob": "^3.2.0",
        "ts-simple-ast": "^0.77.0",
        "tslib": "^1.7.1"
    },
    "peerDependencies": {
        "typescript": "^2.5.3"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.77",
        "@types/mz": "^0.0.32",
        "@types/node": "^8.0.33",
        "alsatian": "^2.0.0",
        "nyc": "^11.2.1",
        "shx": "^0.2.2",
        "tap-spec": "^4.1.1",
        "tap-xunit": "^1.7.0",
        "typescript": "^2.5.3"
    },
    "publishConfig": {
        "access": "public"
    }
}
