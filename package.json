{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "commit": "commit",
        "commitmsg": "commitlint -e",
        "clean": "shx rm -rf ./test-results; node ./scripts/workspaceRunner.js clean",
        "build": "node ./scripts/workspaceRunner.js build",
        "rebuild": "yarn clean; yarn install; yarn build;",
        "watch": "nodemon -e ts,js,json,env -i dist/ -i tests/ -x 'yarn rebuild'",
        "test": "node ./scripts/workspaceRunner.js test",
        "cover": "node ./scripts/workspaceRunner.js cover",
        "release": "lerna publish -m 'chore(solution): publish new version to npm' --conventional-commits --yes; yarn run github-release",
        "github-release": "node ./github-release.js"
    },
    "devDependencies": {
        "@commitlint/cli": "^4.2.1",
        "@commitlint/config-angular": "^4.2.1",
        "@commitlint/prompt-cli": "^4.2.1",
        "axios": "^0.17.1",
        "execa": "^0.8.0",
        "github-release-cli": "^0.3.0",
        "glob": "^7.1.2",
        "husky": "^0.14.3",
        "listr": "^0.13.0",
        "lodash": "^4.17.4",
        "nodemon": "^1.12.1",
        "shx": "^0.2.2",
        "typescript": "^2.6.1",
        "yargs": "^10.0.3"
    }
}
