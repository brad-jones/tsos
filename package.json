    "devDependencies": {
        "shx": "^0.2.2",
        "lerna": "^2.3.1",
        "husky": "^0.14.3",
        "nodemon": "^1.12.1",
        "@commitlint/cli": "^4.2.1",
        "@commitlint/prompt-cli": "^4.2.1",
        "@commitlint/config-angular": "^4.2.1"
    }
}
