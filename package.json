{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "clean": "shx rm -rf ./test-results; node ./scripts/workspaceRunner.js clean",
        "build": "node ./scripts/workspaceRunner.js build",
        "rebuild": "yarn clean && yarn build",
        "watch": "nodemon -e ts,js,json,env -i dist/ -i tests/ -x 'yarn rebuild'",
        "test": "node ./scripts/workspaceRunner.js test",
        "cover": "node ./scripts/workspaceRunner.js cover",
        "release": "node ./scripts/release.js",
        "upgrade-packages": "ncu --upgrade --upgradeAll && node ./scripts/workspaceRunner.js upgrade-packages && yarn install --ignore-engines"
    },
    "devDependencies": {
        "@commitlint/cli": "^6.1.0",
        "@commitlint/config-angular": "^6.1.0",
        "@commitlint/prompt-cli": "^6.1.0",
        "axios": "^0.18.0",
        "conventional-changelog": "^1.1.16",
        "conventional-recommended-bump": "^2.0.5",
        "delay": "^2.0.0",
        "execa": "^0.9.0",
        "get-stream": "^3.0.0",
        "github-release-cli": "^0.3.0",
        "glob": "^7.1.2",
        "husky": "^0.14.3",
        "listr": "^0.13.0",
        "lodash": "^4.17.5",
        "mz": "^2.7.0",
        "nodemon": "^1.15.1",
        "npm-check-updates": "^2.14.0",
        "octonode": "^0.9.1",
        "promise-retry": "^1.1.1",
        "semver": "^5.5.0",
        "shx": "^0.2.2",
        "typescript": "^2.7.2",
        "yargs": "^11.0.0"
    },
    "resolutions": {
        "typescript": "^2.7.2"
    }
}
